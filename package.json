{
  "name": "omniconvert",
  "version": "1.0.0",
  "description": "The Ultimate File Conversion Utility",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.omniconvert.app",
    "productName": "OmniConvert",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "client/build/**/*"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*",
          "!node_modules/electron/**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
