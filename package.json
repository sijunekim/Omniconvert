{
  "name": "omniconvert",
  "version": "1.0.0",
  "description": "The Ultimate File Conversion Utility",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "react-start": "cd client && BROWSER=none npm start",
    "electron:dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-react": "cd client && npm run build",
    "dist": "npm run build-react && electron-builder",
    "dist:win": "npm run build-react && electron-builder --win",
    "dist:all": "npm run build-react && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.omniconvert.app",
    "productName": "OmniConvert",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OmniConvert",
      "runAfterFinish": true
    },
    "files": [
      "main.js",
      "preload.js",
      "client/build/**/*",
      "server/**/*",
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*",
          "!node_modules/electron/**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^23.0.6",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "dotenv": "^17.2.3",
    "file-type": "^21.3.0",
    "fs-extra": "^11.3.3",
    "yauzl": "^3.2.0"
  },
  "extraResources": [
    ".env",
    {
      "from": "server/",
      "to": "server/",
      "filter": [
        "**/*",
        "!node_modules/electron/**/*"
      ]
    }
  ]
}
